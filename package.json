{
  "name": "StarrrtCSS",
  "version": "1.0.0-beta.1",
  "description": "Object-oriented CSS boilerplate built on top of PostCSS and cssnext",
  "main": "dist/starrrt.min.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixdorner/starrrtcss"
  },
  "scripts": {
    "css:normal": "postcss -u postcss-easy-import -u postcss-cssnext -o dist/starrrt.css src/style.css",
    "css:min": "postcss -u postcss-easy-import -u postcss-cssnext -u postcss-clean -o dist/starrrt.min.css src/style.css",
    "copy": "cp dist/starrrt.min.css docs/css/",
    "watch": "onchange 'src/**/*.css' -- npm-run-all css:* copy",
    "build": "npm-run-all css:* copy"
  },
  "keywords": [
    "boilerplate",
    "css",
    "cssnext",
    "framework",
    "grid",
    "postcss"
  ],
  "author": "Felix Dorner <mail@felixdorner.de>",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss": "^5.2.4",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-easy-import": "^1.0.1"
  }
}
